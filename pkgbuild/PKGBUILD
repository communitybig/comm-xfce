pkgname=comm-xfce
pkgdesc="Package group to install BigXFCE"
depends=(
    # Core XFCE
    'xfce4-session'
    'xfce4-panel'
    'xfce4-settings'
    'xfdesktop'
    'xfwm4'
    'thunar'
    
    # Essential XFCE Plugins
    'xfce4-whiskermenu-plugin'
    'xfce4-pulseaudio-plugin'
    'xfce4-notifyd'
    
    # System Tools
    'network-manager-applet'
    'light-locker'
    'pavucontrol'
    
    # Community Specific
    'biglinux-settings'
    'comm-xfce-config'
    'comm-wallpapers-xfce'
    'materiav2-gtk-theme'
    'biglinux-xfwm-axiomd-theme'
    
    # Applications
    'vlc'
    'brave-browser'
    'libreoffice-fresh-pt-br'
    
    # System Configuration
    'lightdm'
    'lightdm-slick-greeter'
    'pipewire-biglinux-config'
    'big-store'
)

optdepends=(
    'blueman: Bluetooth support'
    'xfce4-taskmanager: Task manager'
    'xfce4-screenshooter: Screenshot tool'
    'thunar-archive-plugin: Archive support for Thunar'
    'xfce4-battery-plugin: Battery monitor'
    'xfce4-weather-plugin: Weather plugin'
)

pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
license=('MIT')
url="https://github.com/communitybig/${pkgname}"
source=("git+${url}.git")
md5sums=('SKIP')

if [ -e "${pkgname}.install" ]; then
    install=${pkgname}.install
elif [ -e "pkgbuild.install" ]; then
    install=pkgbuild.install
fi

package() {
    cd "${srcdir}/${pkgname}"

    # Determine the correct source directory
    if [ -d "${pkgname}" ]; then
        srcdir="${srcdir}/${pkgname}/${pkgname}"
    else
        srcdir="${srcdir}/${pkgname}"
    fi

    # Install files
    local dirs=("usr" "etc" "opt")
    for dir in "${dirs[@]}"; do
        if [ -d "${srcdir}/${dir}" ]; then
            cp -a "${srcdir}/${dir}" "${pkgdir}/"
        fi
    done

    # Install license file if present
    if [ -f "LICENSE" ]; then
        install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    fi

    # Install documentation if present
    if [ -f "README.md" ]; then
        install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
    fi
}